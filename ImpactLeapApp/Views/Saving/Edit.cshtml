@model ImpactLeapApp.Models.OrderModels.Saving

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">

    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet light bordered">

        <div class="portlet-title">
            <div class="caption ">
                <span class="caption-subject bold font-yellow-casablanca"> Order Details </span>
                <span class="caption-helper">| @Html.DisplayFor(Model => Model.SavingName)</span>
            </div>
        </div>

        <div class="portlet-body">
            <div class="form-horizontal edit-bottom-margin">

                <input type="hidden" asp-for="SavingId" />

                <div class="form-group edit-bottom-default-margin">
                    <label asp-for="SavingId" class="col-md-2 control-label"></label>
                    <div class="col-md-10 admin-align-middle">
                        @Html.DisplayFor(model => model.SavingId)
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="SavingName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SavingName" class="form-control input-medium" />
                        <span asp-validation-for="SavingName" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DiscountMethod" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="DiscountMethod" class="form-control input-medium">
                            <option value="0">Fixed</option>
                            <option value="1">Percentage</option>
                        </select>
                        <span asp-validation-for="DiscountMethod" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="SavingRate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SavingRate" class="form-control input-medium" />
                        <span asp-validation-for="SavingRate" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="SelectFrom" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SelectFrom" class="form-control input-medium" />
                        <span asp-validation-for="SelectFrom" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="SelectTo" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SelectTo" class="form-control input-medium" />
                        <span asp-validation-for="SelectTo" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group form-no-max-width">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger admin-align-middle"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="IsActive" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="IsActive" class="form-control input-small" />
                        <span asp-validation-for="IsActive" class="text-danger admin-align-middle"></span>
                    </div>
                </div>
            </div>

            <br />

            <a asp-action="Details" asp-route-id="@Model.SavingId"
               role="button" class="btn blue-madison">
                Details
            </a>

            <input type="submit" value="Save" class="btn blue-chambray btn-left-margin" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


