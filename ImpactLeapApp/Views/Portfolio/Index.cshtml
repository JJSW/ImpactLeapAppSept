@model IEnumerable<ImpactLeapApp.Models.Portfolio>
@inject SignInManager<ApplicationUser> SignInManager
@using ImpactLeapApp.Models.OrderModels

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    IFormatProvider formatProvider = new System.Globalization.CultureInfo("en-US");
    int dollarCent = 100;
    double SavingDiscountRate = 0.0;

    if (ViewBag.SelectionDiscountMethod != null)
    {
        if (ViewBag.SelectionDiscountMethod == SavingDiscountMethodList.Percentage)
        {
            double tempTotalPrice = ViewBag.TotalPrice;
            double tempDiscountRate = ViewBag.SelectionDiscount;
            SavingDiscountRate = (tempTotalPrice * tempDiscountRate) / dollarCent;
        }
        else
        {
            SavingDiscountRate = ViewBag.SelectionDiscount;
        }
    }
}

<div class="page-heading">
    <h3>
        Select Portfolio
    </h3>
    <ul class="breadcrumb">
        <li>

        </li>

        OrderID = @ViewData["OrderId"]

        <li class="active">Select Portfolio</li>
    </ul>
    <div class="state-info">
        <section class="panel">
            <div class="panel-body">
                <a class="btn btn-info text-center"
                   style="padding: 10px;"
                   role="button"
                   asp-controller="Order"
                   asp-action="Index">
                    Order
                </a>
            </div>
        </section>
    </div>

</div>

<form action="/Portfolio/NewPortfolio" method="post">

    <div class="wrapper">
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Summary of funds
                        <span class="tools pull-right">
                            <a href="javascript:;" class="fa fa-chevron-down"></a>
                        </span>
                    </header>

                    <div class="panel-body">
                        <div class="adv-table">
                            <table id="dynamic-table" class="display table table-hover general-table">
                                <thead>
                                    <tr>
                                        <th style="width:5%">
                                            @Html.DisplayNameFor(model => model.PortfolioId)
                                        </th>
                                        <th style="width:20%; max-width:30%">
                                            @Html.DisplayNameFor(model => model.FundName)
                                        </th>
                                        <th style="width:15%">
                                            @Html.DisplayNameFor(model => model.FundManager)
                                        </th>
                                        <th style="width:15%">
                                            @Html.DisplayNameFor(model => model.Strategy)
                                        </th>
                                        <th style="width:15%">
                                            @Html.DisplayNameFor(model => model.Geography)
                                        </th>
                                        <th style="width:20%">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th style="width:10%">
                                            Select
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr>
                                            <td>
                                                @Model.ElementAt(@i).PortfolioId
                                            </td>
                                            <td>
                                                @Model.ElementAt(@i).FundName
                                            </td>
                                            <td>
                                                @Model.ElementAt(@i).FundManager
                                            </td>
                                            <td>
                                                @Model.ElementAt(@i).Strategy
                                            </td>
                                            <td>
                                                @Model.ElementAt(@i).Geography
                                            </td>
                                            <td>
                                                @Model.ElementAt(@i).Description
                                            </td>
                                            <td>
                                                <div class="flat-green single-row">
                                                    <div class="radio _margin-top-0 _margin-bottom-0">
                                                        <input type="hidden" name="orderId" value="@ViewData["OrderId"]" />
                                                        <input type="radio" name="portfolioId" id="portfolioId" value="@Model.ElementAt(@i).PortfolioId" />
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>


        <div class="row">
            @if (ViewBag.TotalPrice != null)
            {
                <div class="col-md-6">
                    <section class="panel">
                        <div class="panel-body">
                            <table class="table table-hover general-table">
                                <thead>
                                    <tr>
                                        <th class="inv-col col-md-4"><span>Order total</span></th>
                                        <th class="inv-col col-md-2"><span>Total</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Total price</td>
                                        <td>
                                            <span name="totalPrice">
                                                @ViewBag.TotalPrice.ToString("C0", formatProvider)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Multiple module saving</td>
                                        <td>
                                            @if (ViewBag.SelectionDiscountMethod == SavingDiscountMethodList.Percentage)
                                            {
                                                <span class="text-danger">
                                                    -@SavingDiscountRate.ToString("C", formatProvider) (@ViewBag.SelectionDiscount%)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">
                                                    -@ViewBag.SelectionDiscount.ToString("C0", formatProvider)
                                                </span>
                                            }

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Total to pay</td>
                                        <td>
                                            <span name="totalToPayDisplay">
                                                @ViewBag.TotalToPay.ToString("C0", formatProvider)
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            }

            <div class="col-md-6">
                <section class="panel">
                    <div class="panel-body" style="display:table">
                        Where shall we send your analysis?<br /><br />
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <b><input class="form-control" type="email" required="required" name="email" value="@ViewData["Email"]" placeholder="Enter your email" /></b>
                        }
                        else
                        {
                            <input class="form-control" type="email" required="required" name="email" placeholder="Enter your email" />
                        }

                        <button type="submit"
                                id="proceedButton"
                                class="btn btn-primary btn-new-order">
                            Next step&nbsp;
                            <i class="fa fa-arrow-right" aria-hidden="true"></i>
                        </button>

                    </div>
                </section>
            </div>
        </div>
    </div>
</form>

<div id="checkProceedForm"></div>

@section scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <!--jquery UI-->
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.css" />
    <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.js"></script>

    <link rel="stylesheet" href="~/css/bootstrap-reset.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--iCheck-->
    <link rel="stylesheet" href="~/lib/iCheck/skins/flat/green.css">
    <script type="text/javascript" src="~/js/icheck-init.js"></script>
    <script type="text/javascript" src="~/lib/iCheck/icheck.js"></script>

    <!--dynamic table-->
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/dataTables.bootstrap.js"></script>

    <!--dynamic table initialization -->
    <script type="text/javascript" src="~/js/dynamic_table_init_portfolio.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $("#proceedButton").on("click", function (e) {
                if (!$("input[name=portfolioId]").is(":checked")) {
                    openWarningDialog();
                    e.preventDefault();
                    return false;
                }
            });
        });

        function openWarningDialog() {
            $("#checkProceedForm").dialog({
                type: "GET",
                autoOpen: true,
                resizable: true,
                modal: true,
                draggable: false,
                title: "No portfolio is selected",
                position: { my: "top", at: "top+50", of: window },
                show: {
                    effect: "drop", direction: "up", duration: 300
                },
                hide: {
                    effect: "drop", direction: "up", duration: 300
                },
                width: 600,
                height: 250,

                open: function () {
                    var content = "Please select a portfolio to proceed";
                    $(this).html("<div class=\"alert alert-info text-center dialog-content\">" + content + "</div>");
                },

                buttons: {
                    "Back": {
                        text: "Back",
                        class: "btn btn-default btn-modal",
                        click: function () {
                            $(this).dialog("close");
                        }
                    }
                },

                create: function () {
                    $(this).closest(".ui-dialog")
                        .find(".ui-button")
                        .removeClass("ui-corner-all");
                }

            });
        }
    </script>

}
