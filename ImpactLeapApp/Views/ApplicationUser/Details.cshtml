@model ImpactLeapApp.Models.ApplicationUser

@{
    ViewData["Title"] = "User Details";
}

<div class="row">
    <div class="col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">

            <div class="portlet-title">
                <div class="caption ">
                    <span class="caption-subject bold font-yellow-casablanca"> User Details </span>
                    <span class="caption-helper">| @Model.Email</span>
                </div>
            </div>

            <div class="portlet-body">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="Email" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Model.Email
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CompanyName" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(model => model.CompanyName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserRole" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(model => model.UserRole)
                        </div>
                    </div>
                </div>

                <br />
                <div>
                    <a asp-action="Index" class="btn blue-chambray" role="button">
                        Order Dashboard
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       role="button" class="btn green-meadow btn-left-margin">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>