@model ImpactLeapApp.Models.OrderModels.Module

@{
    ViewData["Title"] = "Details";
}

@{
    IFormatProvider formatProvider = new System.Globalization.CultureInfo("en-US");
}

<div class="row">
    <div class="col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">

            <div class="portlet-title">
                <div class="caption ">
                    <span class="caption-subject bold font-yellow-casablanca"> User Details </span>
                    <span class="caption-helper"> | @Html.DisplayFor(model => model.ModuleName)</span>
                </div>
            </div>

            <div class="portlet-body">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label asp-for="ModuleId" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(Model => Model.ModuleId)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ModuleName" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(Model => Model.ModuleName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(Model => Model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Model.UnitPrice.ToString("C0", formatProvider)
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ModuleSample" class="col-md-2 control-label"></label>
                        <div class="col-md-10 admin-align-middle">
                            @Html.DisplayFor(Model => Model.ModuleSample)
                        </div>
                    </div>
                </div>

                <br />

                <a asp-action="Index" class="btn blue-chambray" role="button">
                    Order Dashboard
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ModuleId"
                   role="button" class="btn green-meadow btn-left-margin">
                    Edit
                </a>

            </div>
        </div>
    </div>
</div>