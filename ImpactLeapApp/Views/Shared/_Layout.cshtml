@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/png">

    <title>@ViewData["Title"] - Impact Leap</title>

    <meta name="keywords" content="sustainable, investment">
    <meta name="description" content="Helping investors understand impact.">

    <!-- Library -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/components.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/darkblue.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @Html.Raw(JavaScriptSnippet.FullScript)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-100426557-1', 'auto');
        ga('send', 'pageview');

    </script>
</head>

@{
    var isAccount = false;
    var isPartialRegister = false;
    var isPartialLogin = false;
    if (ViewContext.RouteData.Values["controller"].ToString() == "Account")
    {
        isAccount = true;
    }
    if (ViewContext.RouteData.Values["action"].ToString() == "PartialRegister")
    {
        isPartialRegister = true;
    }
    if (ViewContext.RouteData.Values["action"].ToString() == "PartialLogin")
    {
        isPartialLogin = true;
    }
}

<body class="page-header-fixed page-sidebar-closed-hide-logo page-container-bg-grey">

    <!-- BEGIN PAGE WRAPPER -->
    <div class="page-wrapper">
        <!-- BEGIN HEADER -->
        <div class="page-header navbar navbar-fixed-top">
            <div class="page-header-inner ">

                <div class="page-logo">
                    <a asp-area=""
                       asp-controller="Home"
                       asp-action="Index">
                        <img src="~/images/ImpactLeap-logo-gray-bg-blue.png" alt="logo" class="logo-default">
                    </a>
                </div>


                <!-- BEGIN TOP NAVIGATION MENU -->
                <div class="top-menu">
                    <ul class="nav navbar-nav pull-right">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>

            </div>
        </div>


        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>

        <!-- BEGIN CONTAINER -->
        @if (isAccount || isPartialRegister || isPartialLogin)
        {
            <div class="page-container">
                @RenderBody()
            </div>
        }
        else
        {
            <div class="page-container">
                <div class="page-content-wrapper">
                    <div class="page-content">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <!-- BEGIN FOOTER -->
            <div class="page-footer">
                <div class="page-footer-inner">
                    2017 &copy; ImpactLeap Ltd
                </div>
                <div class="scroll-to-top">
                    <i class="fa fa-angle-up"></i>
                </div>
            </div>
        }
    </div>
    <!-- END PAGE WRAPPER -->
    <!-- Placed js at the end of the document so the pages load faster -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="~/js/html5shiv.js"></script>
    <script src="~/js/respond.min.js"></script>
    <![endif]-->
    <!-- Library -->
    <script type="text/javascript" src="~/lib/jQuery-1.12.4/jquery-1.12.4.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <!-- Custom js -->
    <script type="text/javascript" src="~/js/app.js"></script>
    <script type="text/javascript" src="~/js/layout.js"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>